<div class="warm-fuzzy-section warm-fuzzy-email section" style="--padding-block-start: {{ section.settings.padding_top }}px; --padding-block-end: {{ section.settings.padding_bottom }}px;">
  <div class="page-width warm-fuzzy-text-container">
    <h2 class="warm-fuzzy-title">{{ section.settings.title }}</h2>
    <p>{{ section.settings.body }}</p>
    {% form 'customer', class: 'warm-fuzzy-email-form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <label class="visually-hidden" for="WarmFuzzyEmail-{{ section.id }}">Email</label>
      <input id="WarmFuzzyEmail-{{ section.id }}" type="email" name="contact[email]" placeholder="Your email" required>
      <button type="submit" class="button">{{ section.settings.button_label }}</button>
      {% if form.posted_successfully? %}
        <p class="warm-fuzzy-form-message">Thanks for subscribing.</p>
      {% endif %}
      {% if form.errors %}
        <p class="warm-fuzzy-form-message">{{ form.errors | default_errors }}</p>
      {% endif %}
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name": "Warm Fuzzy — Email Capture",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Get ranch updates and first access" },
    { "type": "text", "id": "body", "label": "Body", "default": "Be first to know when popular cuts are back in stock." },
    { "type": "text", "id": "button_label", "label": "Button label", "default": "Sign up" },
    { "type": "range", "id": "padding_top", "label": "Top padding", "min": 0, "max": 100, "step": 4, "default": 24, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Bottom padding", "min": 0, "max": 100, "step": 4, "default": 48, "unit": "px" }
  ],
  "presets": [{ "name": "Warm Fuzzy — Email Capture" }]
}
{% endschema %}
