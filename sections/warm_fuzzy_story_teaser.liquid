<div class="warm-fuzzy-section warm-fuzzy-story section" style="--padding-block-start: {{ section.settings.padding_top }}px; --padding-block-end: {{ section.settings.padding_bottom }}px;">
  <div class="page-width warm-fuzzy-text-container">
    <h2 class="warm-fuzzy-title">{{ section.settings.title }}</h2>
    <div class="warm-fuzzy-richtext rte">{{ section.settings.body }}</div>
    {% if section.settings.link != blank %}
      <a class="button button--secondary" href="{{ section.settings.link }}">{{ section.settings.link_label }}</a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Warm Fuzzy — Story Teaser",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "From our family ranch in Harlingen" },
    { "type": "richtext", "id": "body", "label": "Body", "default": "<p>Share a short founder/team teaser and link to your story page.</p>" },
    { "type": "text", "id": "link_label", "label": "Link label", "default": "Read our story" },
    { "type": "url", "id": "link", "label": "Link" },
    { "type": "range", "id": "padding_top", "label": "Top padding", "min": 0, "max": 100, "step": 4, "default": 24, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Bottom padding", "min": 0, "max": 100, "step": 4, "default": 32, "unit": "px" }
  ],
  "presets": [{ "name": "Warm Fuzzy — Story Teaser" }]
}
{% endschema %}
